        }

        function restartQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            userAnswer = null;
            document.getElementById('score').textContent = '0';
            document.getElementById('resultScreen').classList.remove('show');
            document.getElementById('startScreen').style.display = 'block';
            
            anime({
                targets: '#startScreen',
                opacity: [0, 1],
                scale: [0.9, 1],
                duration: 800,
                easing: 'easeOutQuad'
            });
        }
    </script>
