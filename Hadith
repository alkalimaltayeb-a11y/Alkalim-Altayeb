        let currentQuestionIndex = 0;
        let score = 0;
        let userAnswer = null;

        function startQuiz() {
            document.getElementById('startScreen').style.display = 'none';
            document.getElementById('quizScreen').style.display = 'block';
            
            anime({
                targets: '#quizScreen',
                opacity: [0, 1],
                translateY: [30, 0],
                duration: 800,
                easing: 'easeOutQuad'
            });

            loadQuestion();
        }

        function loadQuestion() {
            const q = questions[currentQuestionIndex];
            
            document.getElementById('currentQuestion').textContent = currentQuestionIndex + 1;
            document.getElementById('totalQuestions').textContent = questions.length;
            document.getElementById('questionType').textContent = q.type;
            document.getElementById('questionText').textContent = q.question;
            document.getElementById('explanation').classList.remove('show');
            document.getElementById('checkBtn').style.display = 'none';
            document.getElementById('nextBtn').style.display = 'none';
            
            userAnswer = null;
            
            const optionsContainer = document.getElementById('optionsContainer');
            optionsContainer.innerHTML = '';

            if (q.type === "Ø¥ÙƒÙ…Ø§Ù„ Ø§Ù„ÙØ±Ø§Øº") {
                const input = document.createElement('input');
                input.type = 'text';
                input.className = 'input-answer';
                input.id = 'fillBlankInput';
                input.placeholder = 'Ø§ÙƒØªØ¨ Ø§Ù„Ø¥Ø¬Ø§Ø¨Ø© Ù‡Ù†Ø§...';
                optionsContainer.appendChild(input);
                document.getElementById('checkBtn').style.display = 'inline-block';
            } else {
                const optionsDiv = document.createElement('div');
                optionsDiv.className = 'options';
                
                q.options.forEach((option, index) => {
                    const optionDiv = document.createElement('div');
                    optionDiv.className = 'option';
                    optionDiv.textContent = option;
                    optionDiv.onclick = () => selectOption(index, optionDiv);
                    optionsDiv.appendChild(optionDiv);
                });
                
                optionsContainer.appendChild(optionsDiv);
            }

            updateProgress();
            
            anime({
                targets: '.question-card',
                scale: [0.95, 1],
                opacity: [0, 1],
                duration: 600,
                easing: 'easeOutQuad'
            });
        }

        function selectOption(index, element) {
            const options = document.querySelectorAll('.option');
            options.forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
            userAnswer = index;
            document.getElementById('checkBtn').style.display = 'inline-block';
        }

        function checkAnswer() {
            const q = questions[currentQuestionIndex];
            let isCorrect = false;

            if (q.type === "Ø¥ÙƒÙ…Ø§Ù„ Ø§Ù„ÙØ±Ø§Øº") {
                const input = document.getElementById('fillBlankInput');
                const userInput = input.value.trim();
                isCorrect = userInput === q.answer;
                
                if (isCorrect) {
                    input.style.borderColor = '#28a745';
                    input.style.background = '#d4edda';
                } else {
                    input.style.borderColor = '#dc3545';
                    input.style.background = '#f8d7da';
                }
                input.disabled = true;
            } else {
                isCorrect = userAnswer === q.correct;
                const options = document.querySelectorAll('.option');
                
                options.forEach((opt, index) => {
                    opt.classList.add('disabled');
                    if (index === q.correct) {
                        opt.classList.add('correct');
                    } else if (index === userAnswer && !isCorrect) {
                        opt.classList.add('wrong');
                    }
                });

                anime({
                    targets: isCorrect ? options[userAnswer] : options[q.correct],
                    scale: [1, 1.05, 1],
                    duration: 500,
                    easing: 'easeInOutQuad'
                });
            }

            if (isCorrect) {
                score++;
                document.getElementById('score').textContent = score;
                
                anime({
                    targets: '#score',
                    scale: [1, 1.5, 1],
                    color: ['#5a4a9f', '#28a745', '#5a4a9f'],
                    duration: 600,
                    easing: 'easeInOutQuad'
                });
            }

            document.getElementById('explanation').classList.add('show');
            document.getElementById('explanationText').textContent = q.explanation;
            document.getElementById('checkBtn').style.display = 'none';
            document.getElementById('nextBtn').style.display = 'inline-block';
        }

        function nextQuestion() {
            currentQuestionIndex++;
            
            if (currentQuestionIndex < questions.length) {
                loadQuestion();
            } else {
                showResults();
            }
        }

        function updateProgress() {
            const progress = ((currentQuestionIndex + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function showResults() {
            document.getElementById('quizScreen').style.display = 'none';
            document.getElementById('resultScreen').classList.add('show');
            document.getElementById('finalScore').textContent = score;

            let icon, message;
            const percentage = (score / questions.length) * 100;

            if (percentage >= 90) {
                icon = 'ğŸ†';
                message = 'Ù…Ù…ØªØ§Ø²! Ø£Ù†Øª Ø¹Ø§Ù„Ù… Ø¨Ø§Ù„Ø£Ø­Ø§Ø¯ÙŠØ« Ø§Ù„Ù†Ø¨ÙˆÙŠØ©! Ù…Ø¹Ø±ÙØªÙƒ Ø¹Ù…ÙŠÙ‚Ø© ÙˆÙÙ‡Ù…Ùƒ Ø±Ø§Ø³Ø®. Ø¨Ø§Ø±Ùƒ Ø§Ù„Ù„Ù‡ ÙÙŠ Ø¹Ù„Ù…Ùƒ ÙˆØ²Ø§Ø¯Ùƒ Ù…Ù† ÙØ¶Ù„Ù‡.';
